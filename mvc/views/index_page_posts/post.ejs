<%

  let horizontal = post_meta.includes("hp")?true:false;

  let horizontalClasses = horizontal?" d-md-flex align-itmes-center":"";
  let horizontalAClasses = horizontal?" img-2" : "";
  let horizontalDivClasses = horizontal? " text-2" : "";


  let flip = post_meta.includes("hpr")?true:false;
  let flippedAClasses = flip?" order-md-last":"";
  let flippedDivClasses = flip?" text-md-left":"";

  let reverseDirection = post_meta.includes("vpr")?"d-flex flex-column-reverse":"";

%>











<div class="blog-entry ftco-animate <%= horizontalClasses %><%= reverseDirection%>">
  <a href="/post_refer/<%= post.id%>" class="img<%= horizontalAClasses%><%= flippedAClasses%>" style="background-image: url(images/<%= post.image%>);"></a>
  <div class="text p-4 <%= horizontalDivClasses%><%=  flippedDivClasses%>">
    <h3 class="mb-2"><a href="/post_refer/<%= post.id%>"><%= post.title%></a></h3>
    <div class="meta-wrap">
      <p class="meta">
        <span><i class="icon-calendar mr-2"></i><%= post.date%></span>
        <span><a href="/post_refer/<%= post.id%>"><i class="icon-folder-o mr-2"></i><%= post.category%></a></span>
        <span><i class="icon-comment2 mr-2"></i><%= post.numofComments%></span>
      </p>
    </div>
    <p class="mb-4"><%= post.body.preview%></p>
    <p><a href="/post_refer/<%= post.id%>" class="btn-custom">Read More <span class="ion-ios-arrow-forward"></span></a></p>
  </div>
</div>
